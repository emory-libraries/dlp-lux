<% if child_works %>
  <div class="this-item-contains card mb-2 rounded-0" title="<%= t('blacklight.work.this_item_contains') %>">
    <div class="card-header rounded-0"><%= t('blacklight.work.this_item_contains') %></div>
    <div class="card-body">
      <% child_works.each do |w| %>
        <dl class="row">
          <dt class="col-sm-3"><img class="img-fluid" src=<%= thumbnail_url + w[:thumbnail_path] %>></dt>
          <dd class="col-sm-9"><a href=<%= w[:id] %>><%= w[:title] %></a></dd>
        </dl>
      <% end %>
    </div>
  </div>
<% end %>