<% if this_is_work %>
  <div class="access-and-copyright card mb-2 rounded-0" title="Access and Copyright">
    <div class="card-header rounded-0">Access and Copyright</div>
    <div class="card-body">
      <dl title="Access and Copyright">
        <dt class="blacklight-emory_rights_statement">Rights Statement:</dt>
        <dd class="blacklight-emory_rights_statement"><%= emory_rights_statement %></dd>
        <dt class="blacklight-rights_statement">Rights Status:</dt>
        <dd class="blacklight-rights_statement">
          <% if rights_statment_non_applicable %>
            <%= human_readable_rights_statement %>
          <% else %>
            <a href=<%= rights_statement %>><%= human_readable_rights_statement %></a>
          <% end %>
        </dd>
        <% fields.each do |field_name, field| %>
          <dt class="blacklight-<%= field_name.parameterize %>">
            <%= helpers.render_document_show_field_label(document, field: field_name) %>
          </dt>
          <dd class="blacklight-<%= field_name.parameterize %>">
            <%= document_presenter.field_value(field) %>
          </dd>
        <% end %>
        <p class="copyright-dislaimer" title="copyright dislaimer">Emory Libraries provides copyright information as a courtesy and makes no representation about copyright or other legal status of materials in its digital collections.</p>
      </dl>
    </div>
  </div>
<% end %>
